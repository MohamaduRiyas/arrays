#include <stdio.h>
#include <limits.h>

int findMax(int arr[], int n) {
    int max = INT_MIN; // Initialize max to the smallest possible integer value
    for (int i = 0; i < n; i++) {
        if (arr[i] > max) {
            max = arr[i];
        }
    }
    return max;
}

int findMin(int arr[], int n) {
    int min = INT_MAX; // Initialize min to the largest possible integer value
    for (int i = 0; i < n; i++) {
        if (arr[i] < min) {
            min = arr[i];
        }
    }
    return min;
}

int main() {
    int n;
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);

    int input[n];

    printf("Enter %d elements separated by spaces: ", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &input[i]);
    }

    int max = findMax(input, n);
    int min = findMin(input, n);

    int difference = max - min;

    printf("Difference between maximum and minimum element of the array: %d\n", difference);

    return 0;
}
